<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{{ title }}</title>
    <script src="js/jquery-2.1.4.js"></script>
    <script>
        var timeout = 60 * 1000; // one minute
        var reloadTimer;

        function startReloadTimer()
        {
            reloadTimer = setTimeout(reloadPage, timeout);
        }

        function resetReloadTimer()
        {
            clearTimeout(reloadTimer);
            startReloadTimer();
        }

        function reloadPage()
        {
            var iframe = document.getElementById('i');
            iframe.setAttribute('src', 'about:blank');
            iframe.setAttribute('src', 'displaySlideShow.php?{{ query }}');
            startReloadTimer();
        }

        startReloadTimer();
    </script>
    <script>
        function checkForUpdate()
        {
            $.ajax({
                url: '/',
                type: 'GET',
                data: {
                    checkUpdate: {{ lastUpdate|e('js') }},
                },
                dataType: 'text',
                mimeType: 'text/plain',
                success: function ( text )
                {
                    if (text == 'true') {
                        location.reload(true);
                    }
                }
            });
        }

        setInterval(checkForUpdate, ({{ updateCheckInterval|e('js') }} * 1000));
    </script>
    <style>
        iframe {
            width: 100%;
            height: 100%;
            border: none;
            overflow: hidden;
            margin: 0;
        }
        body {
            width: 100%;
            height: 100%;
            width: 100vw;
            height: 100vh;
            padding: 0;
            margin: 0;
            overflow: hidden;
        }
    </style>
</head>
<body>
<iframe src="displaySlideShow.php?{{ query }}" scrolling="no" id="i"></iframe>
</body>
</html>